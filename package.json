{
  "name": "chinese-porcelain-gallery",
  "version": "1.0.0",
  "description": "A modern web application showcasing traditional Chinese porcelain masterpieces",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd porcelain-gallery/backend && npm run dev",
    "dev:frontend": "cd porcelain-gallery/frontend && npm run dev",
    "build": "cd porcelain-gallery/frontend && npm run build",
    "start": "cd porcelain-gallery/backend && npm start",
    "install:all": "npm install && cd porcelain-gallery/backend && npm install && cd ../frontend && npm install",
    "test": "cd porcelain-gallery/frontend && npm run test",
    "lint": "cd porcelain-gallery/frontend && npm run lint",
    "format": "cd porcelain-gallery/frontend && npm run format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luckycn9527/tea-web.git"
  },
  "keywords": [
    "chinese",
    "porcelain",
    "gallery",
    "vue",
    "typescript",
    "nodejs",
    "express",
    "tailwindcss",
    "cultural-heritage",
    "art",
    "e-commerce"
  ],
  "author": "luckycn9527",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luckycn9527/tea-web/issues"
  },
  "homepage": "https://github.com/luckycn9527/tea-web#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
