<script setup lang="ts">
import { ref, onMounted, computed } from 'vue'
import { useRouter } from 'vue-router'
import ProductCard from '@/components/ProductCard.vue'
import API_CONFIG from '@/config/api'
import { getImageSrc, handleImageError } from '@/utils/image-utils'
import { useAdminStore } from '@/stores/admin'

const router = useRouter()
const adminStore = useAdminStore()

const loading = ref(false)

// Create a computed property for product thumbnails that's reactive
const productThumbnails = computed(() => {
  return adminStore.bestSellersProducts.map(product => ({
    id: product.id,
    name: product.name,
    image: product.mainImage
  }))
})

// Computed property for best sellers with proper formatting
const bestSellers = computed(() => {
  return adminStore.bestSellersProducts.map(product => ({
    id: product.id,
    name: product.name || product.name_en || 'Unknown Product',
    name_en: product.name_en || product.name || 'Unknown Product',
    name_cn: product.name_cn || product.name || '未知产品',
    price: typeof product.price === 'string' ? product.price : product.price?.toString() || '0.00',
    mainImage: product.mainImage || product.primary_image || '/src/assets/tea_image/placeholder.png',
    thumbnails: product.thumbnails || [product.mainImage || product.primary_image || '/src/assets/tea_image/placeholder.png'],
    description: product.description || product.description_en || 'Beautiful product',
    description_cn: product.description_cn || '美丽的产品',
    is_featured: product.is_featured || false,
    is_available: product.is_available || true
  }))
})

onMounted(async () => {
  loading.value = true
  try {
    // Load all admin data including Best Sellers
    await adminStore.loadAllData()
    
    console.log('Best Sellers loaded from admin store:', adminStore.bestSellersProducts.length, 'products')
  } catch (error) {
    console.error('Error loading admin data:', error)
  } finally {
    loading.value = false
  }
})

function goToProduct(productId: number) {
  router.push(`/products/${productId}`)
}

function goToProducts() {
  router.push('/products')
}
</script>

<template>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center bg-gradient-to-br from-blue-900 via-blue-800 to-indigo-900">
      <div class="absolute inset-0 bg-black opacity-40"></div>
      <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
          {{ $t('home.hero.title') }}
        </h1>
        <p class="text-xl md:text-2xl mb-8 leading-relaxed">
          {{ $t('home.hero.subtitle') }}
        </p>
        <button 
          @click="goToProducts"
          class="bg-red-600 hover:bg-red-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          {{ $t('home.hero.cta') }}
        </button>
      </div>
    </section>

    <!-- Best Sellers Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            {{ $t('home.bestSellers.title') }}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {{ $t('home.bestSellers.subtitle') }}
          </p>
        </div>
        
        <div v-if="loading" class="text-center py-12">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-red-600"></div>
          <p class="mt-2 text-gray-600">{{ $t('common.loading') }}</p>
        </div>
        
        <div v-else class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div 
            v-for="product in bestSellers" 
            :key="product.id"
            @click="goToProduct(product.id)"
            class="group cursor-pointer bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          >
            <div class="relative overflow-hidden rounded-t-lg">
              <img 
                :src="getImageSrc(product.mainImage)" 
                :alt="product.name"
                @error="handleImageError"
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute top-4 right-4 bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                {{ $t('home.bestSellers.topRated') }}
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-red-600 transition-colors">
                {{ product.name }}
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-2">
                {{ product.description }}
              </p>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-red-600">
                  ${{ product.price }}
                </span>
                <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors">
                  {{ $t('common.viewDetails') }}
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
</template>

<style scoped>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
